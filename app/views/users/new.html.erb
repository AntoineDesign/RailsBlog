<h1 class="new-article-title">Sign Up</h1>
<div class="row">
  <div class="col s12">
    <%= form_for(@user) do |f| %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :name, class: 'form-title' %><br>
        <%= f.text_field :name, class: 'validate' %>
      </div>
      <div class="input-field col s6">
        <%= f.label :email, class: 'form-title' %><br>
        <%= f.email_field :email, class: 'validate', id: 'email' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password, class: 'form-title' %><br>
        <%= f.password_field :password_field, class: 'validate' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password_confirmation, "Confirmation" %><br>
        <%= f.password_field :password_confirmation, class: 'validate' %>
      </div>
    </div>
    <div class="row">
      <%= f.submit "Create account", class: 'waves-effect waves-light btn-large' %>
    </div>
  </div>
</div>
<% end %>
