<h1 class="edit-article-title">Edit Article</h1>
<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="row">
    <form class="col s12">
      <div class="row">
          <div class="input-field col s6">
            <%= f.label :title, class: 'form-title' %><br>
            <%= f.text_field :title, class: 'validate' %>
          </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :body, class: 'body-title' %><br>
              <%= f.text_area :body, :placeholder => "Content goes here", id: 'textarea1', class: 'materialize-textarea' %>
            </div>
          </div>
           <p class="new-article-button">
             <%= f.submit 'Update Post', :class => 'btn btn-primary' %>
          </p>
      <% end %>
</div>
