<h1 class="post-title"><%= @article.title %></h1>
<br>
<p class="post-body"><%= @article.body %></p>
<div class="article-btn">
  <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-primary" %>
    <%= link_to "Delete Article", article_path(@article), method: :delete, class: 'btn btn-danger',
                                                          data: {confirm: "Do you really want to do this?"} %>
                                                            
  <%= link_to "Back to the Articles List", articles_path, class: "btn btn-primary" %>
</div>
